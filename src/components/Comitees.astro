---
import Layout from "../layouts/Layout.astro";

import { getI18N } from "../i18n";
const { currentLocale = "es" } = Astro;
const i18n = getI18N(currentLocale);
---

<Layout title="Congreso PoÃ©tica">
  <div
    class="flex flex-col items-center mx-auto my-10 lg:my-20 w-[95%] lg:w-[65%]">
    <article class="text-pretty text-xl py-4 flex flex-col gap-8 mx-5 sm:mx-20">
      <h1 class="text-3xl sm:text-5xl font-semibold">{i18n.comitees.title}</h1>
      <div>
        <h2 class="text-3xl font-semibold">{i18n.comitees.subtitle_1}</h2>
        <ul class="list-disc">
          {i18n.comitees.content_1.map((text) => <li>{text}</li>)}
        </ul>
      </div>

      <div>
        <h2 class="text-3xl font-semibold">{i18n.comitees.subtitle_2}</h2>
        <ul class="list-disc">
          {i18n.comitees.content_2.map((text) => <li>{text}</li>)}
        </ul>
      </div>

      <div>
        <h2 class="text-3xl font-semibold">{i18n.comitees.subtitle_3}</h2>
        <ul class="list-disc">
          {i18n.comitees.content_3.map((text) => <li>{text}</li>)}
        </ul>
      </div>
    </article>
  </div>
</Layout>

<style>
  ul {
    padding-left: 2em;
  }
  article div {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }
</style>
